<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".schedule.ScheduleDetails">

    <EditText
        android:id="@+id/schedule_title"
        android:hint="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/schedule_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Start Date"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_title"
        />

    <EditText
        android:id="@+id/schedule_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter End Date"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_start_date"
        />

    <EditText
        android:id="@+id/schedule_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:hint="Content"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/schedule_end_date"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/schedule_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_add_black_24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>